pipeline {
    agent any 
    stages {
        stage('audit tools') {
            steps {
                sh '''
                    docker -v 
                    docker-compose -v
                    node -v
                    ls -l
                '''
            }
        }

        stage('unit tests') {
            steps {
                dir('integration-test/hangman-back') {
                    sh 'npm install'
                    sh 'npm test'
                }
            }
        }

        stage('integration test') {
            steps {
                echo 'run integration tests with Docker Compose'
            }
        }
    }
    post {
        always {
            echo 'clean resources'
        }
    }
}
